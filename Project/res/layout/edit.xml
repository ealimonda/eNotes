<?xml version="1.0" encoding="utf-8"?>
<!-- Main layout -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:background="#ffffffff"
   android:fillViewport="false"
   >

   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:orientation="vertical" >

      <!-- Title box -->
      <LinearLayout
         android:orientation="horizontal"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent">
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:text="@string/Title"
            android:textColor="#ff000000"
            android:textStyle="bold" />
         <EditText
            android:id="@+id/EditTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:textColor="#FF000000"
            android:text="(Untitled)" />
      </LinearLayout>

      <!-- Attachments box -->
      <LinearLayout
          android:id="@+id/EditAttachmentLayout"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:gravity="center"
          android:orientation="horizontal" >

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:text="@string/Attachment"
            android:textColor="#ff000000"
            android:textStyle="bold" />
         <EditText
            android:id="@+id/EditAttachmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:padding="5dip"
            android:text="@string/noAttachment"
            android:textColor="#FF000000" />
         <Button
            android:id="@+id/EditAttachmentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:background="@drawable/ic_delete"
            android:onClick="deleteAttachment" />
      </LinearLayout>

      <!-- URL box -->
      <LinearLayout
          android:id="@+id/EditUrlLayout"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:gravity="center"
          android:orientation="horizontal" >

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:text="@string/Url"
            android:textColor="#ff000000"
            android:textStyle="bold" />
         <EditText
            android:id="@+id/EditUrlText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:padding="5dip"
            android:text="@string/noUrl"
            android:textColor="#FF000000" />
         <Button
            android:id="@+id/EditUrlButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"            
            android:background="@drawable/ic_delete"            
            android:onClick="deleteUrl" />
      </LinearLayout>

      <!-- Content box -->
      <LinearLayout
         android:orientation="horizontal"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent">
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:text="@string/Content"
            android:textColor="#ff000000"
            android:textStyle="bold" />
         <EditText
            android:id="@+id/EditContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/noContent"
            android:textColor="#FF000000"
            android:padding="5dip" />
      </LinearLayout>

      <!-- Tags box -->
      <LinearLayout
         android:orientation="horizontal"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent">
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Tags"
            android:textColor="#FF000000"
            android:textSize="10px" />
         <EditText
            android:id="@+id/EditTags"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF000000"
            android:padding="5dip" />
      </LinearLayout>

   </LinearLayout>
</ScrollView>
